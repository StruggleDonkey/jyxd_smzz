<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jyxd.web.dao.dictionaryDao.TemplateDictionaryDao">

    <resultMap id="templateDictionaryMap" type="com.jyxd.web.data.dictionary.TemplateDictionary">
        <result column="id" property="id" jdbcType="VARCHAR"/>
        <result column="dic_template_name" property="dicTemplateName" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="sort_num" property="sortNum" jdbcType="INTEGER"/>
        <result column="operator_code" property="operatorCode" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
    </resultMap>
    
    <sql id="templateDictionary_colums">id,dic_template_name,status,sort_num,operator_code,create_time</sql>
    <sql id="templateDictionary_propertys">#{id},#{dicTemplateName},#{status},#{sortNum},#{operatorCode},#{createTime}</sql>
    <sql id="templateDictionary_update">dic_template_name=#{dicTemplateName},status=#{status},sort_num=#{sortNum},operator_code=#{operatorCode},create_time=#{createTime}</sql>

    <insert id="insert">
        insert into
        dict_template(<include refid="templateDictionary_colums"></include>)
        values (<include refid="templateDictionary_propertys"></include>)
    </insert>

    <update id="update" parameterType="com.jyxd.web.data.dictionary.TemplateDictionary" >
        update dict_template
        set <include refid="templateDictionary_update"></include>
        where
          id=#{id}
    </update>

    <select id="queryData" resultMap="templateDictionaryMap" parameterType="java.lang.String">
        select
          <include refid="templateDictionary_colums"></include>
        from
        dict_template
        where
          id=#{id}
    </select>

    <select id="queryList" resultType="java.util.Map">
        select
          <include refid="templateDictionary_colums"></include>
        from
        dict_template
        where
          1=1
        and  status != -1
        <if test="dicTemplateName != null and dicTemplateName != ''">
            and  dic_template_name like '%${dicTemplateName}%'
        </if>
        <if test="status != null ">
            and  status= #{status}
        </if>
        <if test="start != null and start != ''">limit #{start},</if>
        <if test="size != null and size != ''">#{size}</if>
    </select>

</mapper>
